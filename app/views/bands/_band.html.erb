<div id="<%= dom_id band %>">
  <p class="my-2">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= band.name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this band", band, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this band', edit_band_path(band), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-small" %>
    <hr class="mt-6">
  <% end %>
</div>


